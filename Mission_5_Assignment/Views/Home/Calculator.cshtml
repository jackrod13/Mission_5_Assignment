@{
    // Sets the title for the page dynamically
    ViewData["Title"] = "Calculator";
}

<div class="calculator-container">
    <!-- Page Title -->
    <h1 class="page-title">Calculate Your Tutoring Cost</h1>

    <!-- Input for Hours -->
    <div class="input-group">
        <label for="hoursInput">Enter the number of hours you need:</label> 
        <input type="number" id="hoursInput" placeholder="Enter hours" min="0" />
        <small id="hoursError" class="error-message hidden">Please enter a positive number.</small> 
    </div>

    <!-- Hourly Rate -->
    <div class="input-group">
        <label for="rateInput">Hourly Rate:</label> 
        <input type="text" id="rateInput" value="30" readonly />
    </div>

    <!-- Button to Calculate -->
    <div class="input-group">
        <button id="calculateButton" class="calculate-button">Calculate Total</button> 
    </div>

    <!-- Output for Total Cost -->
    <div class="input-group">
        <label for="totalOutput">Total Cost:</label> 
        <input type="text" id="totalOutput" readonly />
    </div>

    <!-- Navigation Link to Home -->
    <a href="/" class="back-button">Back to Home</a> 
</div>


<!-- JavaScript -->
<script src="~/js/site.js"></script>
